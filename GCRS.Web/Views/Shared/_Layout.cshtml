<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - GCRS</title>
    @Styles.Render("~/Content/css")
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        @Html.ActionLink("GCRS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("About", "About", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle nav-link" data-toggle="dropdown">Nomencladores<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Provincias", "Index", "Province", null, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Municipios", "Index", "Municipality", null, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Repartos", "Index", "District", null, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Categorias", "Index", "Category", null, new { @class = "dropdown-item" })</li>
                        <li>@Html.ActionLink("Unidades Tiempo Renta", "Index", "RentTimeUnit", null, new { @class = "dropdown-item" })</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle nav-link" data-toggle="dropdown">
                        Usuarios<span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="nav-item">@Html.ActionLink("Administradores", "Index", "Admin", null, new { @class = "dropdown-item" })</li>
                        <li class="nav-item">@Html.ActionLink("Agentes", "Index", "Agent", null, new { @class = "dropdown-item" })</li>
                        <li class="nav-item">@Html.ActionLink("Clientes", "Index", "Client", null, new { @class = "dropdown-item" })</li>
                    </ul>
                </li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>
    <div class="container body-content h-75">
        @RenderBody()
        <footer>
        <hr />
            <p>&copy; @DateTime.Now.Year - GCRS</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", required: false)
</body>
</html>
