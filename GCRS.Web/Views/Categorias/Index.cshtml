@model IEnumerable<GCRS.Domain.Categoria>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Categorias</h2>
@Html.ActionLink("Add", "AddCategoria")
<br />
<table class="table">
    @*Listar Categorias*@
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.Encode(item.Nombre)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
