@using GCRS.Web.ViewModels
@using GCRS.Domain

@model PropertyViewModels

@{
    ViewBag.Title = "Añadir Property";
}

<h2>Añadir Propiedad</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Property.RoomsCount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Property.RoomsCount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Property.RoomsCount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Property.Direccion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Property.Direccion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Property.Direccion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Property.InfoAdicional, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Property.InfoAdicional, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Property.InfoAdicional, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Property.Province, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="col-md-12 mb-2 form-control" name="Property.Province.Name">
                    <option selected disabled hidden>Seleccione una Provincia</option>
                    @foreach (var x in Model.Provinces)
                    {
                        @:<option>@x.Name</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.Property.Province.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Property.Municipality, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="col-md-12 mb-2 form-control" id="Filters_SelectedMunicipality" name="Property.Municipality.Name">
                    <option selected disabled hidden>Seleccione un Municipio</option>
                    @foreach (var x in Model.Municipalities)
                    {
                        @:
                        <option>@x.Name</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.Property.Municipality.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Property.District, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="col-md-12 mb-2 form-control" id="Filters_SelectedDistrict" name="Property.District.Name">
                    <option selected disabled hidden>Seleccione un Distrito</option>
                    @foreach (var x in Model.Districts)
                    {
                        @:
                        <option>@x.Name</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.Property.District.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Property.Category, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select class="col-md-12 mb-2 form-control" id="Filters_SelectedCategory" name="Property.Category.Name">
                    <option selected disabled hidden>Seleccione una Categria</option>
                    @foreach (var x in Model.Categories)
                    {
                        @:
                        <option>@x.Name</option>
                    }
                </select>
                @Html.ValidationMessageFor(model => model.Property.Category.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
